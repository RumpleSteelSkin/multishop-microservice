@model CreateRegisterDto
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>MultiShop Register</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/css/opensans-font.css">
	<link rel="stylesheet" type="text/css" href="~/fonts/line-awesome/css/line-awesome.min.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/css/style2.css"/>
</head>
<body class="form-v4">
<div class="page-content">
	<div class="form-v4-content">
		<div class="form-left">
			<h2>MultiShop</h2>
			<h3>E-Commerce</h3>
			<p class="text-1">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt
				ut labore et dolore magna aliqua. Et molestie ac feugiat sed. Diam volutpat commodo.</p>
			<div class="form-left-last">
				<a asp-controller="Login" asp-action="Index" class="account">Login</a>
			</div>
		</div>
		<form class="form-detail" method="post" id="myform">
			<h2>REGISTER FORM</h2>
			<div class="form-row">
				<label for="Username">Username</label>
				<input type="text" name="Username" id="Username" class="input-text" asp-for="Username" required>
			</div>
			<div class="form-group">
				<div class="form-row form-row-1">
					<label for="Name">Name</label>
					<input type="text" name="Name" id="Name" class="input-text" asp-for="Name" required>
				</div>
				<div class="form-row form-row-1">
					<label for="Surname">Last Name</label>
					<input type="text" name="Surname" id="Surname" class="input-text" asp-for="Surname" required>
				</div>
			</div>
			<div class="form-row">
				<label for="Email">Your Email</label>
				<input type="email" name="Email" id="Email" class="input-text" asp-for="Email" required>
			</div>
			<div class="form-group">
				<div class="form-row form-row-1 ">
					<label for="Password">Password</label>
					<input type="password" name="Password" id="Password" class="input-text" asp-for="Password" required>
				</div>
				<div class="form-row form-row-1">
					<label for="PasswordConfirm">Confirm Password</label>
					<input type="password" name="PasswordConfirm" id="PasswordConfirm" class="input-text" required>
				</div>
			</div>
			<div class="form-checkbox">
				<label class="container"><p>I agree to the <a href="#" class="text">Terms and Conditions</a></p>
					<input type="checkbox" name="checkbox">
					<span class="checkmark"></span>
				</label>
			</div>
			<div class="form-row-last">
				<input type="submit" name="register" class="register" value="Register">
			</div>
		</form>
	</div>
</div>
<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
<script>
	jQuery.validator.setDefaults({
		debug: false,
		success: function (label) {
			label.attr('id', 'valid');
		},
	});
	$("#myform").validate({
		rules: {
			Password: "required",
			PasswordConfirm: {
				equalTo: "#Password"
			}
		},
		messages: {
			Username: {
				required: "Username is required",
			},
			Name: {
				required: "Please enter a Name"
			},
			Surname: {
				required: "Please enter a Surname"
			},
			Email: {
				required: "Please provide an Email"
			},
			Password: {
				required: "Please enter a Password"
			},
			PasswordConfirm: {
				required: "Please enter a Password",
				equalTo: "Passwords do not match"
			}
		}
	});
</script>
</body>
</html>