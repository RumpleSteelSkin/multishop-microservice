<div class="col-lg-4">
    <form class="mb-30" asp-controller="Discount" asp-action="ConfirmDiscountCoupon" method="post">
        <div class="input-group">
            <input type="text" name="code" class="form-control border-0 p-4" value="@ViewBag.code" placeholder="Coupon Code">
            <div class="input-group-append">
                <button class="btn btn-primary">Apply Coupon</button>
            </div>
        </div>
    </form>

    <h5 class="section-title position-relative text-uppercase mb-3">
        <span class="bg-secondary pr-3">Cart Summary</span>
    </h5>

    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-1">
                <h6>Subtotal</h6>
                <h6>$@ViewBag.totalPrice.ToString("F")</h6>
            </div>
            <div class="d-flex justify-content-between mb-1">
                <h6 class="font-weight-medium">Tax</h6>
                <h6 class="font-weight-medium">$@ViewBag.taxAmount.ToString("F")</h6>
            </div>

            @if (ViewBag.discountRate != null && ViewBag.discountRate > 0)
            {
                <div class="d-flex justify-content-between mb-1">
                    <h6 class="font-weight-medium">Total</h6>
                    <h6 class="font-weight-medium">
                        <del>$@ViewBag.totalWithTax.ToString("F")</del>
                    </h6>
                </div>
                <div class="d-flex justify-content-between mb-1">
                    <h6 class="font-weight-medium">Discount Rate</h6>
                    <h6 class="font-weight-medium">%@ViewBag.discountRate</h6>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-between mb-1">
                    <h6 class="font-weight-medium">Total</h6>
                    <h6 class="font-weight-medium">$@ViewBag.totalWithTax.ToString("F")</h6>
                </div>
            }
        </div>

        <div class="pt-2">
            @if (ViewBag.discountRate != null && ViewBag.discountRate > 0)
            {
                <div class="d-flex justify-content-between mt-2">
                    <h5>Total With Discount</h5>
                    <h5>$@ViewBag.totalWithDiscount.ToString("F")</h5>
                </div>
            }
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Proceed To Checkout</button>
        </div>
    </div>
</div>
