@model ICollection<ResultUserDto>?

@{
    ViewBag.Title = "Users";
    ViewBag.v1 = "Home";
    ViewBag.v2 = "Users";
    ViewBag.v3 = "User List";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Username</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Email</th>
                            <th>Address Detail</th>
                            
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Username</td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.Email</td>
                                <td><a asp-action="UserAddressInfo" asp-area="Admin" asp-controller="Users" asp-route-id="@item.Id" class="btn btn-warning">Address Detail</a></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
