@model CreateCommentDto
@{
    ViewBag.Title = "Comments";
    ViewBag.v1 = "Home";
    ViewBag.v2 = "Comments";
    ViewBag.v3 = "Create Comment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>@ViewBag.v3</h4>
                <div class="bs-example">
                    <form method="post">
                        <label>Name Surname</label>
                        <input type="text" class="form-control" asp-for="NameSurname"/>
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email"/>
                        <label>ImageUrl</label>
                        <input type="text" class="form-control" asp-for="ImageUrl"/>
                        <label>Comment Detail</label>
                        <textarea class="form-control" asp-for="CommentDetail" rows="3"></textarea>
                        <label>Created Date</label>
                        <input type="datetime-local" class="form-control" asp-for="CreatedDate"/>
                        <label style="display:block">Rating</label>
                        <div class="star-rating">
                            @for (int i = 5; i >= 1; i--)
                            {
                                <input type="radio" id="star-@i" name="Rating" value="@i" asp-for="Rating"/>
                                <label for="star-@i">â˜…</label>
                            }
                        </div>

                        <style>
                            .star-rating {
                                direction: rtl;
                                font-size: 2rem;
                                unicode-bidi: bidi-override;
                                display: inline-flex;
                            }

                            .star-rating input {
                                display: none;
                            }

                            .star-rating label {
                                color: #ccc;
                                cursor: pointer;
                            }

                            .star-rating input:checked ~ label {
                                color: gold;
                            }

                            .star-rating label:hover,
                            .star-rating label:hover ~ label {
                                color: gold;
                            }
                        </style>
                        <label style="display: block">Status</label>
                        <div class="form-control" style="font-weight: bolder; !important;">
                            <input type="checkbox" asp-for="Status" id="statusCheckbox"/>
                            <span id="statusLabel"></span>
                        </div>
                        <br/>
                        <label>Product</label>
                        @Html.DropDownListFor(x => x.ProductId, (ICollection<SelectListItem>)ViewBag.ProductList, new { @class = "form-control", style = "height:auto; min-height:38px;" })
                        <br/>
                        <button class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const checkbox = document.getElementById('statusCheckbox');
    const statusLabel = document.getElementById('statusLabel');

    function updateStatusText() {
        statusLabel.textContent = checkbox.checked ? "Active" : "Passive";
    }

    updateStatusText();
    checkbox.addEventListener('change', updateStatusText);
</script>