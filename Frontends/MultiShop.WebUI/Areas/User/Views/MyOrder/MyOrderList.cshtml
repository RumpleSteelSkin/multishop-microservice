@model ICollection<ResultOrderingByUserIdDto>

@{
  ViewBag.Title = "title";
  Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
  var count = 0;
}

<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Orders</h4>
            <p class="card-description">
              My Orders <code>@Model.Count</code>
            </p>
            <div class="table-responsive">
              <table class="table">
                <thead>
                <tr>
                  <th>#</th>
                  <th>Total Price</th>
                  <th>Date</th>
                  <th>Details</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                  count++;
                  <tr>
                    <td>@count</td>
                    <td>@item.TotalPrice</td>
                    <td>@item.OrderDate.ToShortDateString()</td>
                    <td><a href="#" class="btn btn-warning">Order Details</a></td>
                  </tr>
                }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

